<div class="col-md-6 mb-2">
  <div class="card testimonial-card">
    <%= link_to twitter_authentication_path(params: { organization_id: organization.id }), class: 'groala-account-connect btn btn-sm default-color' do %>
      <i class="fa fa-random left" aria-hidden="true"></i>
      Connect
    <% end %>
    <div class="card-up twitter-blue"></div>
    <div class="avatar text-xs-center">
      <%= account_user_image %>
    </div>
    <div class="card-block">
      <h4 class="card-title">
        <% if organization.twitter_tokens.present? %>
          Add New
        <% else %>
          <%= account_user_name %>
        <% end %>
      </h4>
      <hr>
      <p><i class="fa fa-twitter fa-lg"></i> Twitter</p>
    </div>
  </div>
</div>
