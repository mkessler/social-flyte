<%= render "shared/datatables_search", table_id: 'groala-users-table' %>
<table id="groala-users-table" class="table table-striped table-bordered groala-datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="text-xs-center">
        <i class="fa fa-user grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">User</span>
      </th>
      <th data-orderable="false"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr id="user-<%= user.id %>">
        <td><%= user.name %></td>
        <td class="text-xs-center groala-no-wrap">
          <%= mail_to user.email, data: { toggle: 'tooltip', placement: 'top' }, title: 'Message' do %>
            <%= content_tag(:i, nil, :class => 'fa fa-envelope fa-lg light-blue-text', aria: { hidden: true }) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
