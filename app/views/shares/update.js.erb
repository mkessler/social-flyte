(function() {
  var $el = $('#share-flag-<%= @share.id %>');
  var update_link = '<%= organization_campaign_post_share_path(@organization, @campaign, @post, @share, share: { flagged: !@share.flagged }) %>'
  App.dataTables.flagToggle($el, <%= @share.flagged? %>, update_link);

  <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>');
  <% end %>
})();
