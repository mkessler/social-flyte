(function() {
  var $el = $('#reaction-flag-<%= @reaction.id %>');
  var update_link = '<%= post_reaction_path(@post, @reaction, reaction: { flagged: !@reaction.flagged }) %>'
  App.dataTables.flagToggle($el, <%= @reaction.flagged? %>, update_link);

  <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>');
  <% end %>
})();
