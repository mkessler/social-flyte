<div class="card">
  <div class="card-block">
    <div class="form-header light-blue darken-2">
      <h3><i class="fa fa-lock"></i> Sign In</h3>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, icon: 'envelope' %>
        <%= f.input :password, icon: 'lock' %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions text-xs-center">
        <%= f.button :button do %>
          <i class="fa fa-check-circle-o left" aria-hidden="true"></i>
          Submit
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <div class="options">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
