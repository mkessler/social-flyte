<div class="card">
  <div class="card-block">

    <div class="text-xs-center">
      <h3><i class="fa fa-cloud"></i> Sign Up</h3>
      <hr class="mt-2 mb-2">
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, icon: 'user', required: true %>
        <%= f.input :last_name, icon: 'user', required: true %>
        <%= f.input :email, icon: 'envelope', required: true %>
        <%= f.input :password, icon: 'lock', required: true %>
      </div>

      <div class="form-actions text-xs-center">
        <%= f.button :button, "Submit" %>
      </div>
    <% end %>

  </div>

  <div class="modal-footer">
    <div class="options">
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
