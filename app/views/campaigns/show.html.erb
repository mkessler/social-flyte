<% content_for :page_title do %>
  <h2 class="dashboard-title extended-title-nav">
    <%= @campaign.name %>
    <%= link_to new_organization_campaign_post_path(@organization, @campaign), class: 'btn-floating btn-small green accent-4 mr-0 extended-nav-1' do %>
      <i class="fa fa-cloud-download" aria-hidden="true" data-toggle="tooltip" title="Import Post"></i>
    <% end %>
    <%= link_to organization_path(@organization), class: 'btn-floating btn-small mr-0' do %>
      <i class="fa fa-reply" aria-hidden="true" data-toggle="tooltip" title="Back"></i>
    <% end %>
  </h2>
<% end %>

<div class="row">
  <div class="col-lg-12 mb-3">
    <ul class="nav nav-tabs tabs-2 light-blue darken-2" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#posts-list" role="tab"><i class="fa fa-th-list" aria-hidden="true"></i> Posts</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#flagged-interactions" role="tab"><i class="fa fa-flag" aria-hidden="true"></i> Interactions</a>
      </li>
    </ul>

    <div class="tab-content card">
      <div class="tab-pane fade in active" id="posts-list" role="tabpanel">
        <% if @posts.present? %>
          <%= render "posts/datatable", organization: @organization, campaign: @campaign, posts: @posts %>
        <% else %>
          <div class="row m-t-1">
            <div class="col-md-12">
              <ul class="stepper stepper-vertical">
                <li class="active">
                  <a href="<%= new_organization_campaign_post_path(@organization, @campaign) %>">
                    <span class="circle">1</span>
                    <span class="label">Import your first post</span>
                  </a>
                  <div class="step-content grey lighten-4">
                    <p>Our platform is built with simplicity in mind and groala removes all of the hassle of importing and analyzing your brand's audience engagement across mulitiple social networks.</p>
                  </div>
                </li>
                <li class="active">
                  <a href="<%= new_organization_campaign_post_path(@organization, @campaign) %>">
                    <span class="circle">2</span>
                    <span class="label">Analyze &amp; reward</span>
                  </a>
                  <div class="step-content grey lighten-4">
                    <p>Monitor your posts' interactions all in one centralized location to quickly track top contributors among your audience. Tap into the power of our platform to search, sort, and flag up to hundreds of thousands of interactions per post!</p>
                  </div>
                </li>
              </ul>

            </div>
          </div>

          <div class="row m-t-1">
            <div class="col-md-12 text-xs-right">
              <%= link_to new_organization_campaign_post_path(@organization, @campaign), class: 'btn green accent-4' do %>
                <i class="fa fa-cloud-download left" aria-hidden="true"></i> Import Post
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="tab-pane fade in" id="flagged-interactions" role="tabpanel">
        <%= render "shared/flagged_interactions_datatable", flagged_interactions: @flagged_interactions, data_source: organization_campaign_interactions_url(@organization, @campaign, format: :json) %>
      </div>
    </div>
  </div>
</div>
