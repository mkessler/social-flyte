    <tr>
      <th>Network</th>
      <th>Network post</th>
      <th>Network parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.network %></td>
        <td><%= post.network_post_id %></td>
        <td><%= post.network_parent_id %></td>
        <td><%= link_to 'Show', organization_campaign_post_path(@organization, @campaign, post) %></td>
        <td><%= link_to 'Destroy', organization_campaign_post_path(@organization, @campaign, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

