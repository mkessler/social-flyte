<h2 class="dashboard-title">
  Add Campaign
  <%= link_to organization_path(@organization), class: 'btn-floating btn-small mr-0' do %>
    <i class="fa fa-reply" aria-hidden="true" data-toggle="tooltip" title="Back"></i>
  <% end %>
</h2>

<ul class="nav nav-tabs tabs-1 light-blue darken-2" role="tablist">
  <li class="nav-item">
    <%= link_to '#new-campaign', class: 'nav-link active', role: 'tab', data: { toggle: 'tab' } do %>
      <i class="fa fa-plus" aria-hidden="true"></i> Campaign
    <% end %>
  </li>
</ul>

<div class="tab-content card">
  <div class="tab-pane fade in active" id="new-campaign" role="tabpanel">
    <%= render 'form', organization: @organization, campaign: @campaign %>
  </div>
</div>
