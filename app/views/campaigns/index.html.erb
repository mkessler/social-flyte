<p id="notice"><%= notice %></p>

<h1>Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Name</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.organization %></td>
        <td><%= campaign.name %></td>
        <td><%= campaign.slug %></td>
        <td><%= link_to 'Show', organization_campaign_path(@organization, campaign) %></td>
        <td><%= link_to 'Edit', edit_organization_campaign_path(@organization, campaign) %></td>
        <td><%= link_to 'Destroy', organization_campaign_path(@organization, campaign), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_organization_campaign_path(@organization) %>
