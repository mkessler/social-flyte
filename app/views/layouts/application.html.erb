<!DOCTYPE html>
<html>
  <head>
    <title>Yoala</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="fixed-sn mdb-skin">
    <header>
      <%= render 'shared/navigation/top' %>
    </header>

    <main>
      <div class="container-fluid">
        <ul>
          <%= render 'devise/menu/registration_items' %>
          <%= render 'devise/menu/login_items' %>
          <% if current_user %>
            <li>
              <a class="nav_link" href="#" onclick="Yoala.authentication.facebook.login(); return false;">Facebook Auth</a>
            </li>
          <% end %>
        </ul>
        <%= yield %>
      </div>
    </main>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'shared/toastr_notifications' %>
    <script type="text/javascript">
      window.fbAsyncInit = function() {
        Yoala.authentication.facebook.init();
      }
      Yoala.authentication.facebook.loadSDK();
    </script>
  </body>
</html>
