<%= render "shared/datatables_search", table_id: 'groala-posts-table' %>
<table id="groala-posts-table" class="table table-bordered groala-datatable" cellspacing="0" width="100%">
  <thead class="thead-default">
    <tr>
      <th>Post</th>
      <th>Engagement</th>
      <th data-orderable="false">Manage</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr id="post-<%= post.id %>">
        <td><%= link_to post.name, organization_campaign_post_path(organization, campaign, post), class: ' groala-standard-link' %></td>
        <td class="groala-no-wrap"><%= number_with_delimiter(post.engagement_count) %></td>
        <td class="groala-no-wrap">
          <%= link_to organization_campaign_post_path(organization, campaign, post) do %>
            <%= content_tag(:i, nil, :class => 'fa fa-eye fa-lg ', aria: { hidden: true }, data: { toggle: 'tooltip', placement: 'top' }, title: 'View') %>
          <% end %>
          <%= link_to organization_campaign_post_path(organization, campaign, post), method: :delete, data: { confirm: 'Are you sure you want to delete this post? All of its data will be deleted as well.' } do %>
            <%= content_tag(:i, nil, :class => 'fa fa-times fa-lg red-text', aria: { hidden: true }, data: { toggle: 'tooltip', placement: 'top' }, title: 'Delete') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
