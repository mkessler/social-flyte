<div class="row">
  <div class="col-lg-12">
    <%= simple_form_for([organization, campaign, post]) do |f| %>
      <div class="form-inputs">
        <%= f.input :network_id, icon: 'thumbs-o-up', as: :string, :input_html => { :value => Network.facebook.name}, disabled: true %>
        <%= f.input :network_post_id, icon: 'commenting', label: 'Post ID' %>
        <%= f.input :network_parent_id, icon: 'newspaper-o', label: 'Page ID' %>
      </div>

      <div class="form-actions text-xs-right">
        <%= f.button :button, disabled: true do %>
          <i class="fa fa-check-circle-o left" aria-hidden="true"></i>
          Submit
        <% end %>
      </div>
    <% end %>
  </div>
</div>
