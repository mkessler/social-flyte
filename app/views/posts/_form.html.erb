<div class="row">
  <div class="col-lg-12">
    <%= simple_form_for([organization, campaign, post]) do |f| %>
      <div class="form-inputs">
        <%= f.input :name, icon: 'tag', label: 'Name' %>
        <%= f.input :network_post_id, icon: 'sticky-note', label: 'Post ID' %>
        <%= f.input :network_parent_id, icon: 'facebook-official', label: 'Page ID' %>
      </div>

      <div class="form-actions text-xs-center">
        <%= f.button :button, disabled: !current_user.has_valid_facebook_token? do %>
          <i class="fa fa-check-circle-o left" aria-hidden="true"></i>
          Submit
        <% end %>
      </div>
    <% end %>
  </div>
</div>
