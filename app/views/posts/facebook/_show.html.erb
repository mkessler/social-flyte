<ul class="nav nav-tabs tabs-2 light-blue darken-2" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#post-comments" role="tab"><i class="fa fa-comments-o" aria-hidden="true"></i> Comments</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#post-reactions" role="tab"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> Reactions</a>
  </li>
</ul>

<div class="tab-content card">
  <div class="tab-pane fade in active" id="post-comments" role="tabpanel">
    <div class="md-form">
      <i class="fa fa-search prefix"></i>
      <input type="text" id="facebook-comments-search" class="form-control">
      <label for="facebook-comments-search" class="">Search</label>
    </div>
    <table id="facebook-comments-table" class="table table-striped groala-data-table" cellspacing="0" width="100%" data-source="<%= comments_organization_campaign_post_url(organization, campaign, post, format: :json) %>">
      <thead>
        <tr>
          <th class="text-xs-center" data-toggle="tooltip" title="Likes">
            <i class="fa fa-thumbs-up" aria-hidden="true"></i>
          </th>
          <th class="text-xs-center" data-toggle="tooltip" title="User">
            <i class="fa fa-user" aria-hidden="true">
          </th>
          <th class="text-xs-center" data-toggle="tooltip" title="Comment">
            <i class="fa fa-comment" aria-hidden="true">
          </th>
          <th class="text-xs-center" data-toggle="tooltip" title="Posted At">
            <i class="fa fa-calendar" aria-hidden="true">
          </th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
  <div class="tab-pane fade in" id="post-reactions" role="tabpanel">
    <div class="md-form">
      <i class="fa fa-search prefix"></i>
      <input type="text" id="facebook-reactions-search" class="form-control">
      <label for="facebook-reactions-search" class="">Search</label>
    </div>
    <table id="facebook-reactions-table" class="table table-striped groala-data-table" cellspacing="0" width="100%" data-source="<%= reactions_organization_campaign_post_url(organization, campaign, post, format: :json) %>">
      <thead>
        <tr>
          <th class="text-xs-center" data-toggle="tooltip" title="Reaction">
            <i class="fa fa-heart" aria-hidden="true"></i>
          </th>
          <th class="text-xs-center" data-toggle="tooltip" title="User">
            <i class="fa fa-user" aria-hidden="true">
          </th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>
