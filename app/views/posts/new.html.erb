<h2 class="dashboard-title">
  Import Post
  <%= link_to organization_campaign_path(@organization, @campaign), class: 'btn-floating btn-small mr-0' do %>
    <i class="fa fa-reply" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Back"></i>
  <% end %>
</h2>

<ul class="nav nav-tabs tabs-1 light-blue darken-2" role="tablist">
  <li class="nav-item">
    <%= link_to '#new-post', class: 'nav-link active', role: 'tab', data: { toggle: 'tab' } do %>
      <i class="fa fa-plus" aria-hidden="true"></i> Post
    <% end %>
  </li>
</ul>

<div class="tab-content card">
  <div class="tab-pane fade in active" id="new-post" role="tabpanel">
    <%= render 'form', organization: @organization, campaign: @campaign, post: @post %>
  </div>
</div>

<script type="text/javascript">
  $(document).on('ready', function() {
    window.fbAsyncInit = function() {
      App.authentications.facebook.init();
      App.authentications.facebook.status();
    }
    App.authentications.facebook.loadSDK();
    console.log('Facebook Authentication ready.');
  });
</script>
