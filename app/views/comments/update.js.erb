(function() {
  var $el = $('#comment-flag-<%= @comment.id %>');
  var update_link = '<%= post_comment_path(@post, @comment, comment: { flagged: !@comment.flagged }) %>';
  App.dataTables.flagToggle($el, <%= @comment.flagged? %>, update_link);

  <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>');
  <% end %>
})();
