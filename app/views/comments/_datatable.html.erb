<%= render 'shared/datatables_search', table_id: 'facebook-comments-table' %>
<table id="facebook-comments-table" class="table table-bordered groala-datatable" cellspacing="0" width="100%" data-source="<%= post_comments_url(post, format: :json) %>">
  <thead class="thead-default">
    <tr>
      <th>Likes</th>
      <th>User</th>
      <th style="min-width: 200px;">Comment</th>
      <th>Posted</th>
      <th class="text-xs-center">
        <i class="fa fa-flag fa-lg" aria-hidden="true"></i>
      </th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<div class="mt-2">
  <hr>
  <%= link_to post_comments_path(post, format: :csv), class: 'btn btn-md secondary-color', data: { toggle: 'tooltip', placement: 'top' }, title: 'Download Comments' do %>
    <i class="fa fa-download left"></i> <b>CSV</b>
  <% end %>
</div>
