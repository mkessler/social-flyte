<%= render 'shared/datatables_search', table_id: 'facebook-comments-table' %>
<%= render 'shared/datatables_buttons', csv_download_link: organization_campaign_post_comments_path(organization, campaign, post, format: :csv), csv_object: 'Comments' %>
<table id="facebook-comments-table" class="table table-striped table-bordered groala-datatable" cellspacing="0" width="100%" data-source="<%= organization_campaign_post_comments_url(organization, campaign, post, format: :json) %>">
  <thead>
    <tr>
      <th class="text-xs-center">
        <i class="fa fa-thumbs-up grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">Likes</span>
      </th>
      <th class="text-xs-center">
        <i class="fa fa-user grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">User</span>
      </th>
      <th class="text-xs-center">
        <i class="fa fa-comment grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">Comment</span>
      </th>
      <th class="text-xs-center">
        <i class="fa fa-calendar grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">Posted</span>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
