<% content_for :page_title do %>
  <h2 class="dashboard-title">
    My Organizations
    <%= link_to new_organization_path, class: 'btn-floating btn-small default-color mr-0' do %>
      <i class="fa fa-bank" aria-hidden="true" data-toggle="tooltip" title="New Organization"></i>
    <% end %>
  </h2>
<% end %>

<div class="row">
  <div class="col-lg-12 mb-3">
    <ul class="nav nav-tabs tabs-1 primary-color" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#organizations-list" role="tab"><i class="fa fa-th-list" aria-hidden="true"></i> Organizations</a>
      </li>
    </ul>

    <div class="tab-content card">
      <div class="tab-pane fade in active" id="organizations-list" role="tabpanel">
        <%= render "organizations/datatable", organizations: @organizations %>
      </div>
    </div>
  </div>
</div>
