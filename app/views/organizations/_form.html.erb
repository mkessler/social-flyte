<div class="row">
  <div class="col-lg-12">
    <%= simple_form_for(organization) do |f| %>
      <div class="form-inputs">
        <%= f.input :name, icon: 'hand-pointer-o' %>
      </div>

      <div class="form-actions text-xs-right">
        <%= f.button :button do %>
          <i class="fa fa-check-circle-o left" aria-hidden="true"></i>
          Submit
        <% end %>
      </div>
    <% end %>
  </div>
</div>
