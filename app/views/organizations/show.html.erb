<% content_for :page_title do %>
  <h2 class="<%= organization_title_class(current_user) %>">
    <%= organization_title(@organization) %>
    <% if current_user.organizations.count > 1 %>
      <%= link_to root_url, class: 'btn-floating btn-small mr-0' do %>
        <i class="fa fa-reply" aria-hidden="true" data-toggle="tooltip"  title="Back"></i>
      <% end %>
    <% end %>
  </h2>
<% end %>

<div class="row">
  <div class="col-md-4 mb-2">
    <div class="card testimonial-card">
      <div class="card-up default-color"></div>
      <div class="avatar text-xs-center">
        <%= content_tag(:i, nil, class: 'fa fa-bullhorn fa-4x mt-2', aria: { hidden: true }) %>
      </div>
      <div class="card-block">
        <h4 class="card-title">Campaigns</h4>
        <hr>
        <p><i class="fa fa-hashtag"></i> <%= @organization.campaigns.count %> total</p>
        <%= link_to organization_campaigns_path(@organization), class: 'btn primary-color-dark' do %>
          <i class="fa fa-eye left"></i> View
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-2">
    <div class="card testimonial-card">
      <div class="card-up secondary-color"></div>
      <div class="avatar text-xs-center">
        <%= content_tag(:i, nil, class: 'fa fa-users fa-4x mt-2', aria: { hidden: true }) %>
      </div>
      <div class="card-block">
        <h4 class="card-title">Users</h4>
        <hr>
        <p><i class="fa fa-hashtag"></i> <%= @organization.users.count %> total</p>
        <%= link_to organization_users_path(@organization), class: 'btn primary-color-dark' do %>
          <i class="fa fa-eye left"></i> View
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-2">
    <div class="card testimonial-card">
      <div class="card-up primary-color"></div>
      <div class="avatar text-xs-center">
        <%= content_tag(:i, nil, class: 'fa fa-superpowers fa-4x mt-2', aria: { hidden: true }) %>
      </div>
      <div class="card-block">
        <h4 class="card-title">Social Accounts</h4>
        <hr>
        <p><i class="fa fa-hashtag"></i> <%= @organization.twitter_tokens.count %> total</p>
        <%= link_to organization_accounts_path(@organization), class: 'btn primary-color-dark' do %>
          <i class="fa fa-eye left"></i> View
        <% end %>
      </div>
    </div>
  </div>
</div>
