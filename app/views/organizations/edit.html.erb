<% content_for :page_title do %>
  <h2 class="dashboard-title">
    Edit <%= @organization.name %>
    <%= link_to root_path, class: 'btn-floating btn-small mr-0' do %>
      <i class="fa fa-reply" aria-hidden="true" data-toggle="tooltip" title="Back"></i>
    <% end %>
  </h2>
<% end %>

<div class="row">
  <div class="col-lg-12 mb-3">
    <ul class="nav nav-tabs tabs-1 primary-color" role="tablist">
      <li class="nav-item">
        <%= link_to '#edit-organization', class: 'nav-link active', role: 'tab', data: { toggle: 'tab' } do %>
          <i class="fa fa-pencil" aria-hidden="true"></i> Edit
        <% end %>
      </li>
    </ul>

    <div class="tab-content card">
      <div class="tab-pane fade in active" id="edit-organization" role="tabpanel">
        <%= render 'form', organization: @organization %>
      </div>
    </div>
  </div>
</div>
