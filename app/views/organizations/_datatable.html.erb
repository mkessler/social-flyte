<%= render "shared/datatables_search", table_id: 'groala-organizations-table' %>
<table id="groala-organizations-table" class="table table-striped table-bordered groala-datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="text-xs-center">
        <i class="fa fa-bank grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">Organization</span>
      </th>
      <th class="text-xs-center">
        <i class="fa fa-hashtag grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">Campaigns</span>
      </th>
      <th class="text-xs-center">
        <i class="fa fa-users grey-text" aria-hidden="true"></i>
        <span class="hidden-xs-down">Users</span>
      </th>
      <th data-orderable="false"></th>
    </tr>
  </thead>
  <tbody>
    <% organizations.each do |organization| %>
      <tr id="organization-<%= organization.id %>">
        <td><%= link_to organization.name, organization_path(organization), class: 'light-blue-text groala-standard-link' %></td>
        <td class="text-xs-center"><%= number_with_delimiter(organization.campaigns.count) %></td>
        <td class="text-xs-center groala-no-wrap"><%= number_with_delimiter(organization.users.count) %></td>
        <td class="text-xs-center groala-no-wrap">
          <%= link_to organization_path(organization), class: 'btn-floating btn-xtra-small light-blue white-text', data: { toggle: 'tooltip', placement: 'top' }, title: 'View' do %>
            <%= content_tag(:i, nil, :class => 'fa fa-eye', aria: { hidden: true }) %>
          <% end %>
          <%= link_to edit_organization_path(organization), class: 'btn-floating btn-xtra-small purple white-text', data: { toggle: 'tooltip', placement: 'top' }, title: 'Edit' do %>
            <%= content_tag(:i, nil, :class => 'fa fa-pencil', aria: { hidden: true }) %>
          <% end %>
          <%= link_to organization_path(organization), class: 'btn-floating btn-xtra-small pink white-text', method: :delete, data: { confirm: 'Are you sure?', toggle: 'tooltip', placement: 'top' }, title: 'Delete' do %>
            <%= content_tag(:i, nil, :class => 'fa fa-times', aria: { hidden: true }) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
