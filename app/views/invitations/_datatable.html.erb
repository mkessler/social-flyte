<%= render "shared/datatables_search", table_id: 'groala-invitations-table' %>
<table id="groala-invitations-table" class="table table-striped table-bordered groala-datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="text-xs-center">
        <i class="fa fa-envelope fa-lg" aria-hidden="true"></i>
        <span class="hidden-xs-down">Email</span>
      </th>
      <th data-orderable="false"></th>
    </tr>
  </thead>
  <tbody>
    <% invitations.each do |invitation| %>
      <tr id="invitation-<%= invitation.id %>">
        <td><%= invitation.email %></td>
        <td class="text-xs-center groala-no-wrap">
          <% if invitation.accepted? %>
            <%= content_tag(:i, nil, :class => 'fa fa-check fa-lg green-text', aria: { hidden: true }, data: { toggle: 'tooltip', placement: 'top' }, title: 'Accepted') %>
          <% else %>
            <%= link_to organization_invitation_path(organization, invitation), method: :delete, data: { confirm: 'Are you sure? Continue to rescind the invitation.', toggle: 'tooltip', placement: 'top' }, title: 'Delete' do %>
              <%= content_tag(:i, nil, :class => 'fa fa-times fa-lg red-text', aria: { hidden: true }) %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
