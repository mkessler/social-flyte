<% content_for :page_title do %>
  <h2 class="dashboard-title">
    New Invitation
    <%= link_to organization_users_path(@organization), class: 'btn-floating btn-small mr-0' do %>
      <i class="fa fa-reply" aria-hidden="true" data-toggle="tooltip" title="Back"></i>
    <% end %>
  </h2>
<% end %>

<div class="row">
  <div class="col-lg-12 mb-3">
    <ul class="nav nav-tabs tabs-1 light-blue darken-2" role="tablist">
      <li class="nav-item">
        <%= link_to '#new-invitation', class: 'nav-link active', role: 'tab', data: { toggle: 'tab' } do %>
          <i class="fa fa-envelope-open-o" aria-hidden="true"></i> Invitation
        <% end %>
      </li>
    </ul>

    <div class="tab-content card">
      <div class="tab-pane fade in active" id="new-invitation" role="tabpanel">
        <%= render 'form', organization: @organization, invitation: @invitation %>
      </div>
    </div>
  </div>
</div>
